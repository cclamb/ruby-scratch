#!/usr/bin/env ruby

require 'socket'

msg = if ARGF.argv.size > 0
  puts "Starting spinner ARGF: #{ARGF.argv}.\n"
else
  hostname = Socket.gethostname
  puts "Starting spinner on #{hostname}."
end

Process::daemon true, false

continue = true
cnt = 0

while continue
	sleep 5
	cnt += 1
	break if cnt > 5
end
