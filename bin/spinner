#!/usr/bin/env ruby

msg = if ARGF.argv.size > 0
  puts "Starting spinner ARGF: #{ARGF.argv}.\n"
else
  s = ''
  puts "reading from ARGF..."
  ARGF.readline do |line|
    s += line
  end
  puts "Starting spinner: #{s}"
end

Process::daemon true, false

continue = true
cnt = 0

while continue
	sleep 5
	cnt += 1
	break if cnt > 5
end
